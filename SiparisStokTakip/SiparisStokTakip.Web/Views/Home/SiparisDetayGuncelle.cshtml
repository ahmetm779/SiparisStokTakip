@model SiparisStokTakip.Entities.SiparisDetay

@{
    ViewData["Title"] = "Sipariş Detay Güncelle";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SiparisDetayGuncelle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="SiparisID" class="control-label"></label>
                <input asp-for="SiparisID" class="form-control" />
                <span asp-validation-for="SiparisID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrunID" class="control-label"></label>
                <input asp-for="UrunID" class="form-control" />
                <span asp-validation-for="UrunID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adet" class="control-label"></label>
                <input asp-for="Adet" class="form-control" />
                <span asp-validation-for="Adet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirimFiyat" class="control-label"></label>
                <input asp-for="BirimFiyat" class="form-control" />
                <span asp-validation-for="BirimFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="İndirimOrani" class="control-label"></label>
                <input asp-for="İndirimOrani" class="form-control" />
                <span asp-validation-for="İndirimOrani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Siparisler">Sipariş Listesine Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
