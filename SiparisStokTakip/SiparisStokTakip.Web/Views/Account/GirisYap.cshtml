
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<link href="~/css/login.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <h1>Giriş Yap</h1>
            @*<img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />*@
        </div>

        <!-- Login Form -->
        <form method="post">
            <input type="text" id="KullaniciAdi" class="fadeIn second" name="KullaniciAdi" placeholder="Kullanıcı Adı">
            <input type="password" id="Sifre" class="fadeIn third" name="Sifre" placeholder="Parola">
            <input type="submit" class="fadeIn fourth" value="Giriş Yap">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" asp-controller="Account" asp-action="SifremiUnuttum">Şifremi Unuttum</a><br />
            <a class="underlineHover" asp-controller="Account" asp-action="KayitOl">Kaydolmak İstiyorum</a>
        </div>

    </div>
</div>