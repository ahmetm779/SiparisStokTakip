<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/dropdownMenu.css" rel="stylesheet" />
</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Urunler">Sipariş ve Stok Takip Sistemi</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button><br />
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        @*<ul class="navbar-nav flex-grow-1">

                                <li class="nav-item">
                                    <a class="btn btn-light" asp-area="" asp-controller="Account" asp-action="CikisYap">@User.Identity.Name</a>
                                </li>
                            </ul>*@
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Urunler">Ürünler</a>
                            </li>
                            @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Siparislerim">Siparişlerim</a>
                            </li>*@

                            @if (User.Identity.IsAuthenticated && User.IsInRole("Yönetici"))
                            {
                                <li class="dropdown">
                                    <a>Siparişler</a>
                                    <div class="dropdown-content">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="YeniSiparisler">Bekleyen Siparişler</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HazırlananSiparisler">Hazırlanan Siparişler</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SevkiyatSiparisler">Sevkiyattaki Siparişler</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TamamlananSiparisler">Tamamlanan Siparişler</a>
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SiparisDetay">Sipariş Detayları</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Tedarikciler">Tedarikciler</a>
                                </li>

                                <li class="dropdown">
                                    <a>Kullanıcılar</a>
                                    <div class="dropdown-content">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="PersonelListele">Personeller</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MusteriListele">Müşteriler</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="HesaplariListele">Hesaplar</a>
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="GelirGider" asp-action="GelirGiderListele">Gelir-Gider</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <ul class="navbar-nav">
                        @*<li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Account" asp-action="CikisYap">@User.Identity.Name</a>
                        </li>*@


                        <li class="dropdown">
                            <a>@User.Identity.Name</a>
                            <div class="dropdown-content">
                                <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Siparislerim">Siparişlerim</a>
                                <a class="btn btn-light" asp-area="" asp-controller="Account" asp-action="CikisYap">Çıkış</a>
                            </div>
                        </li>
                    </ul>
                </div>

            </nav>

        </header>
    }



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
